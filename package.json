{
  "name": "@htma/policy-service",
  "version": "1.0.0",
  "description": "HTMA Platform Policy Service - Cedar policy management and distribution",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:policies": "cedar test --policies policies/",
    "deploy:policies": "cedar deploy --policies policies/",
    "deploy:policies:dev": "cedar deploy --policies policies/ --env development",
    "deploy:policies:staging": "cedar deploy --policies policies/ --env staging",
    "deploy:policies:prod": "cedar deploy --policies policies/ --env production"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "prom-client": "^15.1.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "amqplib": "^0.10.3",
    "@htma/shared": "file:../../shared"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/pg": "^8.10.7",
    "@types/amqplib": "^0.10.4",
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1"
  },
  "keywords": [
    "htma",
    "policy",
    "cedar",
    "authorization"
  ],
  "author": "HTMA Team",
  "license": "MIT"
}
